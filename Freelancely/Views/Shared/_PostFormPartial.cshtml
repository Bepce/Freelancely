@model PostFormModel

<form method="post">
    <div class="form-group">
        <label for="titleInput">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="titleInput" placeholder="Post title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea asp-for="Description" class="form-control" id="descriptionInput" rows="3"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label for="priceInput">Industry</label>
       
        <select asp-for="WorkIndustryId" class="form-select" id="workIndustryInput">         
            @foreach (var industry in Model.WorkIndustries)
            {
                <option value="@industry.Id">@industry.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="priceInput">Price per hour</label>
        <input asp-for="Price" type="number" class="form-control" id="priceInput" placeholder="10.00" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

